{{#with todo}}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">{{title}} <span class="badge">{{priority}}</span></h3>
        </div>
        <div class="panel-body">
            {{#if description}}
                {{description}}
            {{else}}
                No description.
            {{/if}}
        </div>
        <div class="panel-footer">Created at {{created_at}}</div>
    </div>
<div style="display: flex; justify-content: space-between">
    <a href="/todos" class="btn btn-primary" type="button">Back to todos</a>
    <a href="/todos/{{id}}/edit" class="btn btn-warning" type="button">Edit todo</a>
</div>
{{/with}}
