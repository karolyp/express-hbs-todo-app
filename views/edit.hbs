{{#with todo}}
    <form class="form" action="/todos/{{id}}?_method=PUT" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input value="{{title}}" type="text" class="form-control" id="title" placeholder="Enter a todo"
                   name="title">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea value="{{description}}" class="form-control" id="description" placeholder="Enter a description"
                      name="description">{{description}}</textarea>
        </div>
        <div class="form-group">
            <label for="priority">Priority</label>
            <select class="form-control" id="priority" name="priority">
                {{#select priority}}
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                {{/select}}
            </select>
        </div>
        <div style="display: flex; justify-content: space-between">
            <a href="/todos" class="btn btn-primary" type="button">Back to todos</a>
            <button type="submit" class="btn btn-danger">Update</button>
        </div>
    </form>
{{/with}}
